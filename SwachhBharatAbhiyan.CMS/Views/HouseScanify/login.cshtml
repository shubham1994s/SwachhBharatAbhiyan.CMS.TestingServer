@using SwachhBharatAbhiyan.CMS.Models
@model LoginViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Log In</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="robots" content="all,follow">
    @Styles.Render("~/Content/ThemeCss")
    <link rel="stylesheet" href="css/custom.css">
    <!-- Favicon-->
    <link rel="shortcut icon" href="/Content/images/img/sba.png" />

</head>
<body>

    <div class="page login-page">
        <div class="container d-flex align-items-center">
            <div class="form-holder has-shadow">
                <div class="row">
                    <!-- Logo & Information Panel-->
                    <div class="col-lg-6">
                        <center>
                            <div class="info  align-items-center">

                                <div class="content">
                                    <div class="logo">
                                        <img style="height:auto;width:auto;max-width:200px;" src="~/Content/images/img/app_icon_cms.png" />
                                    </div>
                                </div>
                                <br>
                                <div class="content">
                                    <div class="logo">
                                        <h1> BigV Admin Login </h1>
                                    </div>
                                    <p style="margin:0px">Garbage Collection Van, Swachh Bharat Mission  </p>
                                </div>
                            </div>
                        </center>

                    </div>
                    <!-- Form Panel    -->
                    <div class="col-lg-6 bg-white">

                        @using (Html.BeginForm("Login", "HouseScanify", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form d-flex align-items-center">
                                <div class="content">
                                    @Html.ValidationSummary(true, "", new { @class = "text-danger", style = "margin-bottom:-15px;display:block;font-size:12px;" })
                                    <div class="form-group">
                                        @Html.TextBoxFor(m => m.Email, new { @class = "input-material", @id = "login-username" })
                                        <label for="login-username" class="label-material">User Name</label>
                                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger", style = "display:block;font-size:11px;margin-top:2px" })
                                    </div>





                                    <div class="form-group">
                                        @Html.PasswordFor(m => m.Password, new { @class = "input-material ", @id = "login-password" })
                                        <label for="login-password" class="label-material">Password </label>
                                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style = "display:block;font-size:11px;margin-top:2px" })
                                    </div>
                                    @*<a id="login" href="index.html" class="btn btn-primary">Login</a>*@


                                    <input class="btn btn-primary" align="center" style="margin:5px;width:90%; padding: 10px 36px;font-weight:600; border-radius:4px 4px 4px 4px" type="submit" id="login" value="Login">
                                    <!-- This should be submit button but I replaced it with <a> for demo purposes-->
                                    @*<center><a href="#" class="forgot-pass">Forgot Password?</a></center>*@
                                    @*<br><small>Do not have an account? </small><a href="register.html" class="signup">Signup</a>*@
                                </div>
                            </div>
                        }
                    </div>

                </div>
            </div>
        </div>
        <div class="copyrights text-center">
            <p>
                @*Design by <a href="https://bootstrapious.com/admin-templates" class="external">Bootstrapious</a>*@
                <!-- Please do not remove the backlink to us unless you support further theme's development at https://bootstrapious.com/donate. It is part of the license conditions. Thank you for understanding :)-->
            </p>
        </div>
    </div>
    @Scripts.Render("~/Scripts/ThemeScripts")
</body>
</html>

<script src="~/Content/theme-assets/js/front.js"></script>





<script>
            $(document).ready(function () {
                //$('#login-username').focus();
                //alert("aa");
                var materialInputs = $('input.input-material');
                // activate labels for prefilled values
                materialInputs.filter(function () { return $(this).val() !== ""; }).siblings('.label-material').addClass('active');
            });

            // move label on focus
            var materialInputs = $('input.input-material');
            materialInputs.on('focus', function () {
                $(this).siblings('.label-material').addClass('active');
            });

            // remove/keep label on blur
            materialInputs.on('blur', function () {
                $(this).siblings('.label-material').removeClass('active');

                if ($(this).val() !== '') {
                    $(this).siblings('.label-material').addClass('active');
                } else {
                    $(this).siblings('.label-material').removeClass('active');
                }
            });
</script>

